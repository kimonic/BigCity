<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_lvitem_commonadapter1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tv_lvitem_commonadapter1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/color_black"

            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_lvitem_commonadapter2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        >

        <ImageView
            android:id="@+id/iv_lvitem_commonadapter2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_lvitem_commonadapter3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:contentDescription="@null"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/iv_lvitem_commonadapter4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:contentDescription="@null" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_nu"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="36"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/tv_lvitem_commonadapter3"
            />
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_xi"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="36"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_lvitem_commonadapter4"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

</LinearLayout>