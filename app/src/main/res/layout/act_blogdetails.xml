<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.bigcity.ui.MTopBarView
        android:id="@+id/mtb_act_blogdetails"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/themeColor"
        app:centerText="@string/xiangqing"
        app:leftImage="@drawable/ic_arrowback" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_act_blogdetails_title"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="10dp"
                android:text="这是一个标题"
                android:textColor="@color/color_black"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_act_blogdetails_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="2017-09-22  17:13"
                    android:textColor="@color/color_black"
                    android:textSize="14sp"

                    />

                <TextView
                    android:id="@+id/tv_act_blogdetails_author"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="这是一个用户昵称"
                    android:textColor="@color/tv_act_details"
                    android:textSize="14sp"

                    />


            </LinearLayout>


            <TextView
                android:id="@+id/tv_act_blogdetails_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="这是一个用户昵称"
                android:textColor="@color/color_gray"
                android:textSize="14sp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_act_blogdetails_image1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@null"

                    />

                <ImageView
                    android:id="@+id/iv_act_blogdetails_image2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"

                    />

                <ImageView
                    android:id="@+id/iv_act_blogdetails_image3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@null" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/color_act_blogdetailsbac"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/pinglun"
                android:textColor="@color/color_black"
                android:textSize="16sp" />

            <com.bigcity.ui.MListView
                android:id="@+id/lv_act_blogdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_act_blogdetailsbac" />
            <TextView
                android:id="@+id/tv_act_blogdetails_hint"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:textColor="@color/color_black"
                android:gravity="center"
                android:text="@string/zanshimeiyoupingluno"
                />



        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        >
        <EditText
            android:id="@+id/et_act_blogdetails_reply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:hint="@string/chiguaqunzhongyouhuashuo"
            android:background="@drawable/xshape_rounrect_grayborder"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            />


        <TextView
            android:id="@+id/tv_act_blogdetails_face"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/act_blogdetails_face"
            />
        <TextView
            android:id="@+id/tv_act_blogdetails_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="14sp"
            android:textColor="@color/color_white"
            android:text="@string/fasong"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"

            android:background="@drawable/xshape_roundrect_bluebac"

            />
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/viewpager_chatact"
        android:visibility="gone"
        >

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/linearlayout_chatact"
        android:visibility="gone"
        >

    </LinearLayout>

</LinearLayout>