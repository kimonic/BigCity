<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.bigcity.ui.MTopBarView
        android:id="@+id/mtb_act_home"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/themeColor"
        app:centerText="@string/act_home_title"
        app:leftImage="@drawable/ic_arrowback"
        app:rightImage="@drawable/act_home_add"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_act_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
   
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/act_home_bac"
        >
        <LinearLayout
            android:id="@+id/ll_act_home1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/act_home_cafesel"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_act_home2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/act_home_maopaounsel"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_act_home3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_act_home_zhinanzhenunsel"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_act_home4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_act_home_myunsel"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>